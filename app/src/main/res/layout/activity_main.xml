<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapps.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/title"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            style="@style/CustomButtonStyle"
            android:text="@string/spotify_streamer"
            android:onClick="button_1"/>

        <Button
            android:onClick="button_2"
            style="@style/CustomButtonStyle"
            android:text="@string/scores_app" />

        <Button
            android:onClick="button_3"
            style="@style/CustomButtonStyle"
            android:text="@string/library_app" />

        <Button
            android:onClick="button_4"
            style="@style/CustomButtonStyle"
            android:text="@string/build_it_bigger" />

        <Button
            android:onClick="button_5"
            style="@style/CustomButtonStyle"
            android:text="@string/xyz_reader" />

        <Button
            android:onClick="button_6"
            style="@style/CustomButtonStyle"
            android:background="@color/red"
            android:text="@string/my_own_app" />
    </LinearLayout>
</ScrollView>
